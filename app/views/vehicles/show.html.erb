<%= link_to "Home", root_path %>

<%- unless @service_items.empty? %>
<p>
  <b>Service Items Needing Completion</b>
  <ul>
    <%= render(:partial => "service_items/service_item", :collection => @service_items) %>
  </ul>
</p>
<%- end %>

<p><%= link_to("Add FillUp", new_vehicle_fill_up_path(@vehicle))%></p>

<p>
  <b>Name:</b>
  <%= @vehicle.name %><br />
  <b>Current Odometer:</b>
  <%= @vehicle.get_last_odometer %><br />
  <b>Ave mpg:</b>
  <%= @vehicle.ave_mpg %><br />
</p>
<table border=1>
  <tr>
    <td>fill date</td>
    <td>odometer</td>
    <td>gallons</td>
    <td>price per gallon</td>
    <td>total</td>
    <td>mpg</td>
    <td>note</td>
  </tr>
  <%= render(:partial => "fill_ups/fill_up", :collection => @fill_ups) %>
</table>

<p>
  <%= link_to("Service Item List", vehicle_service_items_path(@vehicle))%> |
  <%= link_to("Add Serivce Item", new_vehicle_service_item_path(@vehicle))%>
</p>

<p><%= link_to('Edit Vehicle', edit_vehicle_path(@vehicle)) %></p>
